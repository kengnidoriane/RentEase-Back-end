# Database
DATABASE_URL="postgresql://username:password@localhost:5432/rentease_dev?schema=public"
DATABASE_URL_TEST="postgresql://username:password@localhost:5432/rentease_test?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:5173"

# Email (SendGrid or SMTP)
EMAIL_FROM="noreply@rentease.com"
SENDGRID_API_KEY="your-sendgrid-api-key"
# OR for SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@rentease.com"

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-1"
AWS_S3_BUCKET="rentease-uploads"

# Google Maps
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Web Push Notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@rentease.com"